{% extends 'base.html.twig' %}

{% block title %}Liste index{% endblock %}

{% block body %}
    <div class="container">
        <h2>Liste</h2>
        <br/>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>Phone</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for liste in listes %}
                <tr>
                    <td>{{ liste.id }}</td>
                    <td>{{ liste.name }}</td>
                    <td>{{ liste.city }}</td>
                    <td>{{ liste.phone }}</td>
                    <td>
                        <a href="{{ path('app_liste_show', {'id': liste.id}) }}">show</a>
                        <a href="{{ path('app_liste_edit', {'id': liste.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_liste_new') }}">Create new</a>
    </div>
{% endblock %}
